# SENTINEL environment variables template
# Copy this file to .env and fill in your values

# Telegram bot notifications
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Your Telegram chat ID (personal or group chat)
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Discord webhook notifications
# Create a webhook in your Discord server settings
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook/id

# Database path for storing monitoring history
DB_PATH=/app/data/sentinel.db

# Custom check interval in seconds (optional)
# CHECK_INTERVAL=60

# Timeout for HTTP requests in seconds (optional)
# REQUEST_TIMEOUT=10

# Log level: DEBUG, INFO, WARN, ERROR (optional)
# LOG_LEVEL=INFO

# Log format: json or text (optional)
# LOG_FORMAT=text
